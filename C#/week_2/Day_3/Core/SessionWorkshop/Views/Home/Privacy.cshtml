<div class="text-center d-flex justify-content-between">
    <h1>Welcome @ViewBag.Username</h1>
    <form asp-action="Logout" asp-controller="Home" method="post">
        <button class="btn btn-danger">Log out</button>
    </form>

</div>
<div class="text-center h2">@ViewBag.Num</div>
<div class="container mt-5 text-center">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Add" asp-controller="Home" method="post"><button class="btn btn-primary mb-2">+1</button></form>
            <form asp-action="Minus" asp-controller="Home" method="post"><button class="btn btn-info mb-2">-1</button></form>
        </div>
        <div class="col-md-6">
             <form asp-action="Random" asp-controller="Home" method="post"><button class="btn btn-success mb-2">Random</button></form>
            <form asp-action="Times" asp-controller="Home" method="post"><button class="btn btn-danger mb-2">*2</button></form>
        </div>
    </div>
</div>
