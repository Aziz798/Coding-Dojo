@model LoginUser

<div>
    <h3>Login</h3>
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="form-group">
                <label asp-for="LoginEmail"></label>
                <input asp-for="LoginEmail" class="form-control">
                <span class="text-danger" asp-validation-for="LoginEmail"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginPassword"></label>
                <input asp-for="LoginPassword" class="form-control">
                <span class="text-danger" asp-validation-for="LoginPassword"></span>
            </div>
            <button class="btn btn-primary w-100 mt-5">Login</button>
    </form>
</div>