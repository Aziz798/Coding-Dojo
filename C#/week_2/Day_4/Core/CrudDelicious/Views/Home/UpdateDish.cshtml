@model Dish

<div class="text-center">
    <h1>Add A new Dish</h1>
    <form asp-action="Update" asp-controller="Home" asp-route-id="@Model.DishId" method="post">
        <div class="form-group">
            <label asp-for="Chef"></label>
            <input class="form-control" asp-for="Chef">
            <span class="text-danger" asp-validation-for="Chef"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <input class="form-control" asp-for="Calories">
            <span class="text-danger" asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" aria-placeholder="tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span class="text-danger" asp-validation-for="Tastiness"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <button class="btn btn-info">Edit Dish</button>
    </form>
</div>
