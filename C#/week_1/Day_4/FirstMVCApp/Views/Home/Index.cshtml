@model Song

<div class="text-center">
    <h1 class="display-4">🎶 Add Your Favourite Song 🎶</h1>
    <div class="card shadow p-3">
        <div class="card-head text-danger text-center h1">
            Old Form Version
        </div>
        <form action="/create/v0/songs" method="post">
            <div class="form-group mb-3">
                <label asp-for="Title"></label>
                <input  class="form-control" asp-for="Title">
            </div>
            <div class="form-group mb-3">
                <label asp-for="Singer"></label>
                <input class="form-control" asp-for="Singer">
            </div>
            <div class="form-group mb-3">
                <label asp-for="ReleaseYear">Release year</label>
                <input  class="form-control" asp-for="ReleaseYear">
            </div>
            <div class="form-group">
                <label asp-for="IsExplicit" class="form-check-label">Is Explicit?</label>
                <input  asp-for="IsExplicit" >
            </div>
            <div class="text-end">
                <button class="btn btn-dark w-50">Submit</button>
            </div>
        </form>
    </div>
</div>
<div class="text-center">
    <h1 class="display-4">🎶 Add Your Favourite Song 🎶</h1>
    <div class="card shadow p-3">
        <div class="card-head text-danger text-center h1">
            ASP .NET Form Version
        </div>
        <form asp-controller="Home" asp-action="CreateSongV1">
            <div class="form-group mb-3">
                <label for="">Title</label>
                <input type="text" class="form-control" name="title">
            </div>
            <div class="form-group mb-3">
                <label for="">Singer</label>
                <input type="text" class="form-control" name="singer">
            </div>
            <div class="form-group mb-3">
                <label for="">Release year</label>
                <input type="number" class="form-control" name="releaseYear">
            </div>
            <div class="form-group">
                <label for="" class="form-check-label">Is Explicit?</label>
                <input type="checkbox" name="isExplicit" >
            </div>
            <div class="text-end">
                <button class="btn btn-info w-50">Submit</button>
            </div>
        </form>
    </div>
</div>
