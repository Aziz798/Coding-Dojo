@model Survey

<div class="text-center">
    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DojoLocation"></label>
    <select class="form-control" asp-for="DojoLocation">
        <option value="">Select Dojo Location</option>
        <option>Tunisia</option>
        <option>Usa</option>
        <option>Canda</option>
    </select>
    <span asp-validation-for="DojoLocation" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="FavouriteLanguage"></label>
    <select class="form-control" asp-for="FavouriteLanguage">
        <option value="">Select Favorite Language</option>
        <option>JavaScript</option>
        <option>C#</option>
        <option>Python</option>
    </select>
    <span asp-validation-for="FavouriteLanguage" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Comment"></label>
    <textarea asp-for="Comment" id="" cols="30" rows="10" class="form-control"></textarea>
    <span asp-validation-for="Comment" class="text-danger"></span>
</div>
<input type="submit" value="Add Survey" class="btn btn-info">
    </form>
</div>
